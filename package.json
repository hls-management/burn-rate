{
  "name": "burn-rate",
  "version": "1.0.0",
  "description": "A turn-based strategy game with roguelike elements",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:cli && npm run build:web",
    "build:cli": "npm run clean:cli && tsc",
    "build:web": "npm run clean:web && vite build",
    "build:prod": "NODE_ENV=production npm run build",
    "build:dev": "NODE_ENV=development npm run build",
    "dev": "tsc --watch",
    "dev:web": "vite --mode development",
    "dev:web:host": "vite --mode development --host",
    "start": "node dist/cli.js",
    "start:debug": "node dist/cli.js --debug",
    "start:web": "npm run build:web && npm run preview:web",
    "start:web:dev": "npm run dev:web",
    "preview:web": "vite preview --outDir dist/web",
    "preview:web:host": "vite preview --outDir dist/web --host",
    "system-check": "node dist/cli.js --system-check",
    "test": "vitest --run",
    "test:watch": "vitest",
    "validate": "node -e \"import('./dist/IntegrationValidator.js').then(m => m.IntegrationValidator.runFullValidation().then(r => { m.IntegrationValidator.displayResults(r.results, r.summary); process.exit(r.allPassed ? 0 : 1); }))\"",
    "clean": "rm -rf dist",
    "clean:cli": "rm -rf dist/*.js dist/*.d.ts dist/*.map dist/engine dist/models dist/ui",
    "clean:web": "rm -rf dist/web",
    "rebuild": "npm run clean && npm run build",
    "rebuild:cli": "npm run clean:cli && npm run build:cli",
    "rebuild:web": "npm run clean:web && npm run build:web",
    "full-test": "npm run test && npm run validate",
    "analyze:web": "npm run build:web -- --mode analyze",
    "serve:web": "npm run build:web && npm run preview:web",
    "serve:web:static": "node scripts/serve-web.js",
    "deploy": "scripts/deploy.sh",
    "deploy:cli": "scripts/deploy.sh --cli-only",
    "deploy:web": "scripts/deploy.sh --web-only",
    "deploy:prod": "scripts/deploy.sh --production"
  },
  "keywords": [
    "game",
    "strategy",
    "typescript",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "jsdom": "^27.0.0",
    "terser": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
