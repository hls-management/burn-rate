{
  "name": "burn-rate",
  "version": "1.0.0",
  "description": "A turn-based strategy game with roguelike elements",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:cli && npm run build:web",
    "build:cli": "tsc",
    "build:web": "vite build",
    "dev": "tsc --watch",
    "dev:web": "vite",
    "start": "node dist/cli.js",
    "start:debug": "node dist/cli.js --debug",
    "start:web": "npm run build:web && npm run preview:web",
    "preview:web": "vite preview --outDir dist/web",
    "system-check": "node dist/cli.js --system-check",
    "test": "vitest --run",
    "test:watch": "vitest",
    "validate": "node -e \"import('./dist/IntegrationValidator.js').then(m => m.IntegrationValidator.runFullValidation().then(r => { m.IntegrationValidator.displayResults(r.results, r.summary); process.exit(r.allPassed ? 0 : 1); }))\"",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "full-test": "npm run test && npm run validate"
  },
  "keywords": ["game", "strategy", "typescript", "cli"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}